@model BookWithReviews
@{
    var category = Model.Book.Category.Replace(" ", "-");
    var imageUrl = @Model.Book.Fields.Cover.FirstOrDefault().GetStatiqPath();
}

<div class="col-2 portfolio-item filter-@category">
    <div class="portfolio-wrap">
        <img src="@imageUrl" class="img-fluid" alt="">
        <div class="portfolio-links">
            <a href="@imageUrl" data-gall="bookGallery" class="venobox" title="@Model.Book.Title"><i
                    class="bx bx-image-alt"></i></a>
            <a href="#" data-book-path="@StatiqHelper.GetBookUrl(Model.Book)" class="book-detail" title="Book Details"><i class="bx bx-cart"></i></a>
        </div>
    </div>
</div>